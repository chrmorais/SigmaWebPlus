<SigmaWebLogo@Image>
	size_hint: 1, 0.3
	source: 'res/logo.png'
	allow_strech: True
	canvas.before:
        Color:
            rgb: 0.188, 0.188, 0.188, 1
        Rectangle:
            pos: self.pos
            size: self.size

<SigmaWebTextInput@TextInput>
	multiline: False
	font_size: self.height/2
	pos_hint: {'x': .1, 'y': .1}
	size_hint: .8, .8

<SigmaWebButton@Button>
	background_color: 0.55, 0.55, 0.55, 1
	font_size: self.height/2
	pos_hint: {'x': .1, 'y': .1}
	size_hint: .8, .8

<screenLogin>
	BoxLayout:
		orientation: 'vertical'
		
		SigmaWebLogo:
		
		BoxLayout:
			orientation: 'vertical'
			size_hint: 1, .3
			
			SigmaWebTextInput:
				id: matricula
				hint_text: "Matricula"
				input_type: 'number'
				on_text_validate: senha.focus = True
			
			SigmaWebTextInput:
				id: senha
				hint_text: "Senha"
				password: True
				on_text_validate: app.on_event('Login', matricula.text, senha.text)
			
			SigmaWebButton:
				text: 'Entrar'
				on_press: app.on_event('Login', matricula.text, senha.text)
			
		Label:

<SigmaWebPageHeader@Button>:
	size_hint: 1, 0.15
	background_color: 0.33, 0.88, 0.33, 1
    background_down: self.background_normal
    halign: 'center'

<SigmaWebPage@BoxLayout>
	orientation: 'vertical'
	header: obj_header
	content: obj_content
	
	SigmaWebPageHeader:
		id: obj_header
		text: 'Home'
		
	Label:
		id: obj_content
		color: 0.18,0.18,0.18,1
		halign: 'center'
		text: 'Suas notas est√£o sendo carregadas\n\nAguarde...'

<SigmaWebPage@BoxLayout>
	orientation: 'vertical'

<screenMain>
	paineis: obj_paineis
	
	canvas.before:
        Color:
            rgba: 0.86, 0.86, 0.86, 1
        Rectangle:
            pos: self.pos
            size: self.size
	
	BoxLayout:
		orientation: 'vertical'
		
		SigmaWebLogo:
		
		Carousel:
			id: obj_paineis
			direction: 'right'
				
			SigmaWebPage:
			
		SigmaWebButton:
			size_hint: 1, .2
			text: 'Verificar notas agora'
			font_size: self.height/5
			on_press: app.on_event('VerificarNotas')
			pos_hint: {'x': 0, 'y': 0}
			size_hint: 1, .2